<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Text Preview -->
    <TextView
        android:id="@+id/textPreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Sample Text"
        android:textSize="24sp"
        android:padding="12dp"
        android:background="#F5F5F5"/>

    <!-- Text Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/text_editor_enter_text"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:minLines="3" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Text Color Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_editor_text_color"
        android:textStyle="bold"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:id="@+id/colorContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Color buttons will be added here programmatically -->
            <Button
                android:id="@+id/colorButton1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="#FF0000"
                android:tag="#FF0000" />

            <Button
                android:id="@+id/colorButton2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="#00FF00"
                android:tag="#00FF00" />

            <Button
                android:id="@+id/colorButton3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="#0000FF"
                android:tag="#0000FF" />

            <Button
                android:id="@+id/colorButton4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="#FFFF00"
                android:tag="#FFFF00" />

            <Button
                android:id="@+id/colorButton5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="#FF00FF"
                android:tag="#FF00FF" />

            <Button
                android:id="@+id/colorButton6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="#00FFFF"
                android:tag="#00FFFF" />

            <Button
                android:id="@+id/colorButton7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="#000000"
                android:tag="#000000" />

            <Button
                android:id="@+id/colorButton8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="#FFFFFF"
                android:tag="#FFFFFF" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Stroke Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_editor_stroke"
            android:textStyle="bold"/>

        <Switch
            android:id="@+id/strokeSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_editor_enable_stroke" />

        <LinearLayout
            android:id="@+id/strokeSettingsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_editor_stroke_color"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/strokeColorContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Stroke color buttons will mirror text color buttons -->
                    <Button
                        android:id="@+id/strokeColorButton1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:background="#FF0000"
                        android:tag="#FF0000" />

                    <Button
                        android:id="@+id/strokeColorButton2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:background="#00FF00"
                        android:tag="#00FF00" />

                    <Button
                        android:id="@+id/strokeColorButton3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:background="#0000FF"
                        android:tag="#0000FF" />

                    <Button
                        android:id="@+id/strokeColorButton4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:background="#000000"
                        android:tag="#000000" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_editor_stroke_width"/>

            <SeekBar
                android:id="@+id/strokeWidthSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="20"
                android:progress="2"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Font Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_editor_font"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/fontSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Text Size Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_editor_text_size"
            android:textStyle="bold"/>

        <SeekBar
            android:id="@+id/textSizeSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="40"/>
    </LinearLayout>

    <!-- Shadow Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_editor_shadow"
            android:textStyle="bold"/>

        <Switch
            android:id="@+id/shadowSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_editor_enable_shadow" />

        <LinearLayout
            android:id="@+id/shadowSettingsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_editor_shadow_color"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/shadowColorContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/shadowColorButton1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:background="#80000000"
                        android:tag="#80000000" />

                    <Button
                        android:id="@+id/shadowColorButton2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:background="#80FF0000"
                        android:tag="#80FF0000" />

                    <Button
                        android:id="@+id/shadowColorButton3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:background="#800000FF"
                        android:tag="#800000FF" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_editor_shadow_radius"/>

            <SeekBar
                android:id="@+id/shadowRadiusSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="25"
                android:progress="5"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_editor_shadow_dx"/>

            <SeekBar
                android:id="@+id/shadowDxSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="20"
                android:progress="5"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_editor_shadow_dy"/>

            <SeekBar
                android:id="@+id/shadowDySeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="20"
                android:progress="5"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="@string/text_editor_cancel"/>

        <Button
            android:id="@+id/btnApply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="@string/text_editor_apply"/>
    </LinearLayout>
</LinearLayout> 