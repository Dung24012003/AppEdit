<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    >

    <androidx.camera.view.PreviewView
        app:layout_constraintBottom_toTopOf="@+id/img_btn_capture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/viewFinder"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <androidx.appcompat.widget.AppCompatButton
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/takephoto"
        android:id="@+id/img_btn_capture"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginBottom="50dp"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        app:layout_constraintBottom_toBottomOf="@+id/img_btn_capture"
        app:layout_constraintStart_toEndOf="@+id/img_btn_capture"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rotate"
        android:id="@+id/img_btn_rotate"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="@+id/img_btn_capture"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
